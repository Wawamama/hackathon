<!DOCTYPE html>
<html>
  <head>
    <title>Your tickets</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    
    <%- include('header') %>

    <div class="homepage-container">
        <h2>My tickets :</h2>
        <table>
            <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Journey</th>
                  <th scope="col">Date</th>
                  <th scope="col">Departure Time</th>
                  <th scope="col">Price</th>
                </tr>
              </thead>
              <tbody>
                  <% dataCardTrain.forEach(trip => { %>
                    <tr>
                        <td>1</td>
                        <td><%= trip.departure %> / <%= trip.arrival %></td>
                        <td><%= formateDate(trip.date) %></td>
                        <td><%= trip.departureTime %></td>
                        <td><%= trip.price %> €</td>
                    </tr>
                  <% })%>

                  <tr class='total-row'>
                      <td>Total</td>
                      <td colspan="3"></td>
                      <td>387 €</td>
                  </tr>
              </tbody>
        </table>
        <a href="#"><button class="btn confirm-btn">Confirm</button></a>
    </div>

    <!-- <script src="js/popup.js"></script> -->
  </body>
</html>
